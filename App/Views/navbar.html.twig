<style type="text/css">
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #66a3ff;
  }

  li {
    float: left;
  }

  li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }

  li a:hover {
    background-color: white;
  }

  .right-button {
    float: right;
  }
</style>

<nav>
  <ul>
  <li><a href="index">Home</a></li>
  
  {%  if sessionValues['username'] is empty %}
    <li><a class="right-button" href="register">Register</a></li>
    <li><a class="right-button" href="login">Login</a></li>
  {% else %}
    {%  if sessionValues['group_id'] == 0 %}
      <li><a class="right-button" href="admin">Administration</a></li>
    {% endif %}
    <li><a class="right-button" href="logout">Log Out</a></li>
    <li><a class="right-button" href="settings">My user settings</a></li>
    <li><a class="right-button">Logged as: {{ sessionValues['username'] }} </a></li>
  {% endif %}
  </ul>
</nav>
